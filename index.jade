extends assets/jade/layouts/global/index

block content
	.main-content-area
		.tabs
			.tabs__nav
				a(href='#user').tabs__nav-item
					| Пользователь

				a(href='#terms-of-use').tabs__nav-item
					| Правила пользования

				a(href='#chat-with-manager').tabs__nav-item
					| Ваш персональный&nbsp;
					span.line-break
					| менеджер

				a(href='#faq').tabs__nav-item
					| FAQ

				a(href='#settings').tabs__nav-item.is-active
					| Настройки

			.tab-container#user
				.tab-container__section-inner
					.section-title Реквизиты клиента

					include assets/jade/partials/tables/profile-client-details

					.change-personal-data-request
						a(href='#').btn-bordered
							| Запрос на смену регистрационных данных

			.tab-container#terms-of-use
				.tab-container__section-inner
					.section-title Правила пользования

					include assets/jade/partials/icon-links-list

			.is-visible.tab-container#chat-with-manager
				.tab-container__header
					.tab-container__header-title
						.section-title
							| Ваш персональный менеджер

					.tab-container__header-actions
						.switcher-panel
							a(href='#').switcher-panel__item
								| Чат с менеджером

							a(href='#').switcher-panel__item
								| Мои вопросы

				.chat-manager
					.chat-manager__preview
						.person-preview
							.person-preview__image
								img(alt='' src='')

							.person-preview__info
								.person-preview__name Анна Орлова

								.person-preview__contacts
									.person-preview__contacts-item
										| skype:&nbsp;
										span.underline
											| anna.ingosinvest

										//.person-preview__actions
											//span.btn-bordered
												| Начать чат с менеджером

						.chat-title
							| Чат с менеджером:


					.chat-manager__actions
						span.link-change поменять менеджера

				include assets/jade/partials/chat


			.tab-container#faq
				.tab-container__section-inner
					.section-title Часто задаваемые вопросы

					.accordion
						.accordion__section-title.js-toggle-next-el
							| Портфель

						.accordion__section
							.links-list
								.links-list__item
									span.answer-link.js-toggle-next-el
										| Что такое паевой инвестиционный фонд?

									.faq-answer
										| Стоимость чистых активов паевого инвестиционного фонда (СЧА) определяется как разница между стоимостью активов этого фонда (денежные средства на счетах и в банках, ценные бумаги, накопленный купонный доход и иные разрешенные активы) и величиной обязательств, подлежащих исполнению за счет указанных активов, на момент определения стоимости чистых активов.

						.accordion__section-title.js-toggle-next-el
							| Паевые Инвестиционные Фонды

						.accordion__section
							.links-list
								.links-list__item
									span.answer-link.js-toggle-next-el
										| Что такое инвестиционный пай?

									.faq-answer
										| Стоимость чистых активов паевого инвестиционного фонда (СЧА) определяется как разница между стоимостью активов этого фонда (денежные средства на счетах и в банках, ценные бумаги, накопленный купонный доход и иные разрешенные активы) и величиной обязательств, подлежащих исполнению за счет указанных активов, на момент определения стоимости чистых активов.
								.links-list__item
									span.answer-link.js-toggle-next-el
										| Что такое СЧА?

			.tab-container#settings
				.tab-container__section-inner
					.section-title
						| Настройки

					.change-personal-data-request
						a(href='#').btn-bordered
							| Запрос на смену регистрационных данных

					form.form-update-personal-user-data
						.form-row.form-row--email
							label(for='cabinet-data-user-login').form-row__title
								| Логин (ваш email):

							.form-item
								input(type='text'
								placeholder='Введите ваш email'
								id='cabinet-data-user-login').form-control

						.form-row.form-row--password
							label(for='cabinet-data-user-password').form-row__title
								| Пароль:

							.form-item.form-item--password-create
								.form-controls-group
									.form-controls-group__item
										input(type='password'
										placeholder='••••••'
										id='cabinet-data-user-password').form-control

									.form-controls-group__item
										input(type='password'
										placeholder='Повторите пароль').form-control

							.form-item.form-item--password-note
								.form-note
									| Пароль должен содержать не менее 8 символов.
									span.line-break
										| Используйте хотя бы одну цифру и прописную букву.

						.form-row.form-row--password-strength
							.form-item.form-item--password-strength-title
								| Сложность пароля:

							.form-item
								#password-strength-scale.password-strength-scale
									.password-strength-scale__degree.is-0

									.password-strength-scale__degree

									.password-strength-scale__degree

									.password-strength-scale__degree

						.form-row
							label(for='cabinet-data-user-phone').form-row__title
								| Номер мобильного телефона:

							.form-item
								input(type='text'
								placeholder='+7 (937) 542-54-19'
								id='cabinet-data-user-phone').form-control

						.form-row.form-row--submit
							input(type='submit' value='Сохранить').form-submit


		include assets/jade/partials/cards-list