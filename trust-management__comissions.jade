extends assets/jade/layouts/global/index

block content
	.main-content-area
		.main-content-section
			.tabs._inside-main-content
				.tabs__nav
					a(href='#briefcase').tabs__nav-item.is-active
						| Общий портфель

					a(href='#briefcase_111').tabs__nav-item
						| Портфель по договору №111

					a(href='#briefcase_112').tabs__nav-item
						| Портфель по договору №112

				.tab-container.is-visible#briefcase
					.tab-container__section-inner
						include assets/jade/partials/filter-with-data-panel

						.section-title
							| Информация о начисленных комиссиях

						.table-heading
							.table-heading__actions
								.fullscreen-link
									| таблицу на весь экран

						.table-wrapper
							include assets/jade/partials/tables/management-comissions

						.download-area
							include assets/jade/partials/download-file

				.tab-container#briefcase_111
					.tab-container__section-inner
						.section-title Портфель по договору 1

				.tab-container#briefcase_112
					.tab-container__section-inner
						.section-title Портфель по договору 2

		include assets/jade/partials/cards-list